{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "adminportal: debug server-side",
        "type": "node-terminal",
        "request": "launch",
        "cwd": "${workspaceFolder}/adminportal/adminportal",
        "command": "npm run dev"
      },
      {
        "name": "adminportal: debug client-side",
        "type": "chrome",
        "request": "launch",
        "cwd": "${workspaceFolder}/adminportal/adminportal",
        "url": "http://localhost:3000/"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "server: Launch",
        "skipFiles": ["<node_internals>/**"],
        "cwd": "${workspaceFolder}/server",
        "program": "app.js" // replace app.js with your entry point file
      }
    ]
  }